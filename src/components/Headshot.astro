---
import { Image } from "astro:assets";
import ProfilePictureWebp from "@assets/profile_picture.webp";
---
<div>
    <Image src={ProfilePictureWebp} alt="Callum Evans" />
</div>

<style>
    img {
        border-radius: 100%;
        width: 120px;
        height: 120px;

        @media (min-width: 600px) {
            width: 176px;
            height: 176px;
        }
    }
</style>
