---
import { Image } from "astro:assets";
import ProfilePictureWebp from "@assets/profile_picture.webp";

const { smallHeader } = Astro.props;
---
<Image transition:animate="none" class={smallHeader ? 'smallHeader' : ''} src={ProfilePictureWebp} alt="Callum Evans" />

<style>
    img {
        border-radius: 100%;
        width: 120px;
        height: 120px;

        &.smallHeader {
            width: 77px;
            height: 77px;
        }

        @media (min-width: 600px) {
            width: 176px;
            height: 176px;

            &.smallHeader {
                width: 77px;
                height: 77px;
            }
        }
    }
</style>
