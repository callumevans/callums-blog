---
import ProfilePictureWebp from "@assets/profile_picture.webp";
import ProfilePictureJpeg from "@assets/profile_picture.jpeg";
---
<picture>
    <source srcset={ProfilePictureWebp.src} type="image/webp" />
    <source srcset={ProfilePictureJpeg.src} type="image/jpeg" />
    <img src={ProfilePictureJpeg.src} alt="Callum Evans" />
</picture>

<style>
    img {
        border-radius: 100%;
        width: 120px;
        height: 120px;

        @media (min-width: 600px) {
            width: 176px;
            height: 176px;
        }
    }
</style>
