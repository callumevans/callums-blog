---
import "@fontsource/scope-one"
import "@fontsource/arvo";
import Headshot from "@components/Headshot.astro";
import SocialNav from "@components/SocialNav.astro";
import { ViewTransitions } from "astro:transitions";

const { subtitle, description } = Astro.props;
const title = `Callum's Blog${subtitle ? ` | ${subtitle}` : ''}`
---
<html lang="en">
    <head>
        <title>{title}</title>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
        <meta name="title" content={title} />
        <link rel="sitemap" href="/sitemap-index.xml" />
        { description && <meta name="description" content={description} /> }
        <ViewTransitions />
    </head>
    <body>
    <div id="HeadContent">
        <Headshot />
        <SocialNav />
        <nav>
            <a href="/">Home</a>
        </nav>
    </div>
        <main>
            <slot />
        </main>
    </body>
</html>

<style>
    body {
        background: rgb(245, 245, 245);
        font-family: "Scope One", serif;
        line-height: 1.6em;
        margin: 0;
        font-size: 1.05em;
        padding: 1.3em 1.7em;

        @media (min-width: 600px) {
            font-size: 1.32em;
            padding: 2.3em 2em;
        }
    }

    #HeadContent {
        display: grid;
        grid-template-rows: auto auto;
        grid-row-gap: 2rem;
        margin: 0 auto;
        justify-content: center;
        text-align: center;
    }

    nav {
        font-family: "Arvo", serif;
        font-weight: bold;
        font-size: 1.35em;
    }

    nav > a {
        color: inherit;
        text-decoration: none;
    }

    nav > a:visited {
        color: inherit;
    }

    nav > a:hover {
        color: inherit;
        text-decoration: underline;
    }

    main {
        margin: 3.6em auto;
        max-width: 700px;
    }
</style>